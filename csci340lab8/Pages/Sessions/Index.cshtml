@page
@model csci340lab8.Pages.Sessions.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>

<form>
    <p>
        Title: <input type="text" asp-for="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Session[0].GameTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Session[0].Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Session[0].StartTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Session[0].EndTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Session[0].Wins)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Session[0].Losses)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Session[0].RankChange)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Session) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.GameTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Wins)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Losses)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RankChange)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
